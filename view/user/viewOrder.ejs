                                <div class="flex-sm-col col-auto"> <p class="mb-1">&#8377;<%=subtotal%></p> </div>
                            </div>

                            <a href="/downloadInvoice/<%=order._id%>" class="btn btn-primary btn-round" >Download Invoice</a>                     
                                  
